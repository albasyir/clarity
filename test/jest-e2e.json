{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": "\\.e2e-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@clarityops/docker/(.*)": "<rootDir>/../libs/docker/src/$1",
    "@clarityops/docker": "<rootDir>/../libs/docker/src",
    "@clarityops/platform-manager/(.*)": "<rootDir>/../libs/platform-manager/src/$1",
    "@clarityops/platform-manager": "<rootDir>/../libs/platform-manager/src"
  }
}